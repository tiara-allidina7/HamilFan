<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="&lt; BACK"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:onClick="back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="Who said the following quote?"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/quote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="Insert quote here"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_below="@id/hamilton_img"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/answer_1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@color/gold"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:onClick="submitAnswer"/>

        <Button
            android:id="@+id/answer_2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:onClick="submitAnswer"/>

        <Button
            android:id="@+id/answer_3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginBottom="25dp"
            android:onClick="submitAnswer"/>

        <Button
            android:id="@+id/answer_4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/gold"
            android:text=""
            android:textColor="@color/white"
            android:onClick="submitAnswer"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/symbol"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE :"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="7dp"/>
        <TextView
            android:id="@+id/count_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/correct_green"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/count_incorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/wrong_red"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>